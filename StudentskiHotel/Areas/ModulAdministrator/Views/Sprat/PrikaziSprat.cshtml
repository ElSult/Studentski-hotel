@using StudentskiHotel.Data.EntityModels;
@model StudentskiHotel.Web.Areas.ModulAdministrator.ViewModels.PrikaziSpratVM

<div class="form-group" id="ajaxdiv">

    <form action="/ModulAdministrator/Sprat/PrikaziSprat" autocomplete="off">
        <table>
            <tr>
                <th>Unesite naziv:</th>
                <td>
                    @Html.TextBoxFor(x => x.NazivSprata, new { @class = "form-control", placeholder = "Unesite naziv..." })
                </td>
                <td>
                    <input type="submit" value="Pretraži" class="btn btn-secondary" />

                </td>
                <td>
                    <a href="/ModulAdministrator/Sprat/DodajSprat" ajax-poziv="da" ajax-rezultat="ajaxdiv1" class="btn btn-secondary">Novi sprat</a>

                </td>
            </tr>
        </table>
    </form>

    <br />

    <div class="form-group" id="ajaxdiv1"></div>



    <table id="tabela" class="table table-hover">
        <thead>
            <tr>
                <th>Sprat:</th>

            </tr>
        </thead>
        <tbody>

            @foreach (Sprat x in Model.Spratovi)
            {
                <tr>
                    <td>@x.BrojSprata</td>


                    <td><a href="/ModulAdministrator/Sprat/UrediSprat?SpratId=@x.Id" ajax-poziv="da" ajax-rezultat="ajaxdiv1" class="btn btn-warning">Uredi</a></td>
                    <td><a href="/ModulAdministrator/Sprat/ObrisiSprat?SpratId=@x.Id" ajax-poziv="da" ajax-rezultat="ajaxdiv" class="btn btn-danger">Obrisi</a></td>
                </tr>

            }
        </tbody>
    </table>
</div>