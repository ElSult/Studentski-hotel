
@model StudentskiHotel.Web.Areas.ModulAdministrator.ViewModels.DodajGradVM

@{
    
    string poruka = (string)ViewData["poruka"];

}
<form action="/ModulAdministrator/Lokacija/SnimiGrad" ajax-poziv="da" ajax-rezultat="ajaxdiv">
    <table>
        <tr>@Html.HiddenFor(x => x.Id)</tr>
        <tr>@Html.HiddenFor(x => x.KantonID)</tr>
        <tr>
            <th>Grad:</th>
            <td>@Html.TextBoxFor(x => x.Naziv, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(x => x.Naziv, "", new { @class = "text-danger" })
             <span style="color:crimson">@poruka</span></td>
           
        </tr>
        <tr><td><input type="submit" value="Snimi" class="btn btn-success" /></td></tr>
    </table>
</form>

