@using StudentskiHotel.Data.EntityModels;
@model StudentskiHotel.Web.Areas.ModulAdministrator.ViewModels.PrikaziKategorijuVM


<div class="form-group" id="ajaxdiv">

    <form action="/ModulAdministrator/Kategorija/PrikaziKategoriju" autocomplete="off">
        <table>
            <tr>
                <th>Unesite naziv:</th>
                <td>
                    @Html.TextBoxFor(x => x.NazivKategorije, new { @class = "form-control", placeholder = "Unesite naziv..." })
                </td>
                <td>
                    <input type="submit" value="Pretraži" class="btn btn-secondary" />

                </td>
                <td>
                    <a href="/ModulAdministrator/Kategorija/DodajKategoriju" ajax-poziv="da" ajax-rezultat="ajaxdiv1" class="btn btn-secondary">Nova kategorija</a>

                </td>
            </tr>
        </table>
    </form>

    <br />

    <div class="form-group" id="ajaxdiv1"></div>



    <table id="tabela" class="table table-hover">
        <thead>
            <tr>
                <th>Kategorija:</th>
                <th>Cijena:</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Kategorija x in Model.Kategorije)
            {
                <tr>
                    <td>@x.Naziv</td>
                    <td>@x.Cijena.ToString("0.00") KM</td>

                    <td><a href="/ModulAdministrator/Kategorija/UrediKategoriju?KategorijaId=@x.Id" ajax-poziv="da" ajax-rezultat="ajaxdiv1" class="btn btn-warning">Uredi</a></td>
                    <td><a href="/ModulAdministrator/Kategorija/ObrisiKategoriju?KategorijaId=@x.Id" ajax-poziv="da" ajax-rezultat="ajaxdiv"  class="btn btn-danger">Obrisi</a></td>
                </tr>

            }
        </tbody>
    </table>
</div>