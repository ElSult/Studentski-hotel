
@model StudentskiHotel.Web.Areas.ModulAdministrator.ViewModels.DodajKategorijuVM

@{
    string poruka = (string)ViewData["poruka"];
}

<form action="/ModulAdministrator/Kategorija/SnimiKategoriju" autocomplete="off" ajax-poziv="da" ajax-rezultat="ajaxdiv">
    <table>
        <tr>@Html.HiddenFor(x => x.Id)</tr>
        <tr>
            <td>Naziv kategorije:</td>
            <td>@Html.TextBoxFor(x => x.Naziv, new { @class = "form-control" })</td>
            <td>
                @Html.ValidationMessageFor(x => x.Naziv, "", new { @class = "text-danger" })
                <span style="color:crimson">@poruka</span>
            </td>
        <tr>
            <td>Cijena:</td>
            <td>@Html.TextBoxFor(x => x.Cijena, new { @class = "form-control" })</td>
            <td>
                @Html.ValidationMessageFor(x => x.Cijena, "", new { @class = "text-danger" })
                <span style="color:crimson">@poruka</span>
            </td>

        </tr>
        <tr><td><input type="submit" value="Snimi" class="btn btn-dark" /></td></tr>
    </table>
</form>

