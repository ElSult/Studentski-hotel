@using StudentskiHotel.Data.EntityModels;
@model StudentskiHotel.Web.Areas.ModulAdministrator.ViewModels.DodajKategorijaProizvodVM

@{
    string poruka = (string)ViewData["poruka"];

}

<form action="/ModulAdministrator/KategorijaProizvoda/SnimiKategorijuProizvoda" autocomplete="off" ajax-poziv="da" ajax-rezultat="ajaxdiv">
    <table>
        <tr>
            <td>@Html.HiddenFor(x => x.ID)</td>
        </tr>
        <tr>
            <td>Naziv kategorije:</td>
            <td>@Html.TextBoxFor(x => x.NazivKategorije, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(x=>x.NazivKategorije,"", new {@class="text-danger"})
              @poruka </td>
        </tr>
        <tr><td><input type="submit" value="Snimi" class="btn btn-dark" /></td></tr>
    </table>
</form>