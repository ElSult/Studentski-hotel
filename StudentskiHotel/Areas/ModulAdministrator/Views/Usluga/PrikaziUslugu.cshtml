@using StudentskiHotel.Data.EntityModels
@model StudentskiHotel.Web.Areas.ModulAdministrator.ViewModels.PrikaziUsluguVM

<div class="form-group" id="ajaxdiv">

    <form action="/ModulAdministrator/Usluga/PrikaziUslugu" autocomplete="off">
        <table>
            <tr>
                <th>Unesite naziv:</th>
                <td>
                    @Html.TextBoxFor(x => x.NazivUsluge, new { @class = "form-control", placeholder = "Pretraži..." })
                </td>
                <td>
                    <input type="submit" value="Pretraži" class="btn btn-secondary" />

                </td>
                <td>
                    <a href="/ModulAdministrator/Usluga/DodajUslugu" ajax-poziv="da" ajax-rezultat="ajaxdiv1" class="btn btn-secondary">Nova usluga</a>

                </td>
            </tr>
        </table>
    </form>

    <br />

    <div class="form-group" id="ajaxdiv1"></div>

    <table id="tabela" class="table table-hover">
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Cijena</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Usluga u in Model.Usluge)
            {
                <tr>
                    <td>@u.Naziv</td>
                    <td>@u.Cijena,00 KM</td>
                    <td>
                        <a href="/ModulAdministrator/Usluga/UrediUslugu?UslugaId=@u.Id" ajax-poziv="da" ajax-rezultat="ajaxdiv1" class="btn btn-warning">Uredi</a>
                        <a href="/ModulAdministrator/Usluga/ObrisiUslugu?UslugaId=@u.Id" ajax-poziv="da" ajax-rezultat="ajaxdiv" class="btn btn-danger">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>