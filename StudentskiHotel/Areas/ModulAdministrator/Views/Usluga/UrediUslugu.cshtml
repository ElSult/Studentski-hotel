@model StudentskiHotel.Web.Areas.ModulAdministrator.ViewModels.DodajUsluguVM

@{ 
    string poruka = (string)ViewData["poruka"];

}

<form action="/ModulAdministrator/Usluga/SnimiUslugu" autocomplete="off" ajax-poziv="da" ajax-rezultat="ajaxdiv">
    <table>
        <tr>
            <td>@Html.HiddenFor(x=>x.Id)</td>
        </tr>
        <tr>
            <td>Naziv: </td>
            <td>@Html.TextBoxFor(x=>x.Naziv, new { @class="form-control"})</td>
            <td>@Html.ValidationMessageFor(x=>x.Naziv, "", new { @class = "text-danger" })
            @poruka</td>
        </tr>
        <tr>
            <td>Cijena: </td>
            <td>@Html.TextBoxFor(x => x.Cijena, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(x=>x.Cijena, "", new { @class = "text-danger" })</td>

        </tr>
   <tr><td><input type="submit" name="submit" value="snimi" class="btn btn-dark"/></td></tr>

    </table>
</form>
