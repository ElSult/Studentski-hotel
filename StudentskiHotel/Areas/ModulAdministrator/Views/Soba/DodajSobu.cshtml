@using StudentskiHotel.Data.EntityModels
@model StudentskiHotel.Web.Areas.ModulAdministrator.ViewModels.DodajSobuVM
@{
    string poruka = (string)ViewData["poruka"];
}



<form action="/ModulAdministrator/Soba/SnimiSobu" autocomplete="off" ajax-poziv="da" ajax-rezultat="ajaxdiv">
    <table>
        <tr>
            <td>Broj sobe: </td>
            <td>@Html.TextBoxFor(x => x.BrojSobe, new { @class = "form-control" })</td>

        </tr>
        <tr>
            <td>Balkon</td>
            <td>@Html.CheckBoxFor(x => x.Balkon, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>TV</td>
            <td>@Html.CheckBoxFor(x => x.TV, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Sprat</td>
            <td>@Html.DropDownListFor(x => x.SpratId, Model.Spratovi, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Vrsta sobe</td>
            <td>@Html.DropDownListFor(x => x.VrstaSobeId, Model.VrsteSoba, new { @class = "form-control" })</td>
        </tr>
        <tr><td><input type="submit" value="Snimi" class="btn btn-dark" /></td></tr>

    </table>
</form>

