@using StudentskiHotel.Data.EntityModels
@model StudentskiHotel.Web.Areas.ModulZaposlenik.ViewModels.DodajRezervacijuVM

@*@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers*@

<form action="/ModulZaposlenik/Rezervacija/SnimiRezervaciju">
    <table>
        <tr>@Html.HiddenFor(x => x.TuristID)</tr>

        <tr>
            <td>Vrijeme dolaska:</td>
            <td>@Html.EditorFor(x => x.VrijemeDolaska)</td>
        </tr>
        <tr>
            <td>Vrijeme odlaska:</td>
            <td>@Html.EditorFor(x => x.VrijemeOdlaska)</td>
        </tr>
        <tr>
            <td>Nacin placanja:</td>
            <td>@Html.DropDownListFor(x => x.NacinPlacanjaID, Model.NaciniPlacanja, new { @class = "form-control" }) </td>
        </tr>
        <tr>
            <td>Kategorija:</td>
            <td>@Html.DropDownListFor(x => x.KategorijaID, Model.Kategorije, new { @class = "form-control" }) </td>
        </tr>
        <tr>
            <td>Soba</td>
            <td>@Html.DropDownListFor(x => x.SobaID, Model.sobe, new { @class = "form-control" }) </td>
        </tr>
        <tr>
            <td>Usluge</td>
            <td>
                @for (int i = 0; i < Model.Usluge.Count(); i++)
                {
                    <input type="checkbox" value="@Model.Usluge[i].Value" id="Usluge_@Model.Usluge[i].Value" name="OdabraneUsluge"> <label for="Usluge_@Model.Usluge[i].Value">@Model.Usluge[i].Text</label><br/>
                }
            </td>
        </tr>


        @Html.HiddenFor(x => x.TuristID)
        <tr><td><a href="/ModulZaposlenik/Turist/PrikaziTurista" class="btn btn-warning">Nazad</a>
        <input type="submit" value="Snimi" class="btn btn-dark" /></td></tr>
        
    </table>
</form>

