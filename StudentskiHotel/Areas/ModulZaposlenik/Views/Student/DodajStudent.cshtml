@using StudentskiHotel.Data.EntityModels
@model StudentskiHotel.Web.Areas.ModulZaposlenik.ViewModels.DodajStudentVM


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers


<form action="/ModulZaposlenik/Student/SnimiStudent" autocomplete="off">
    <table class="table table-striped">
        <tr>
            <td>Ime</td>
            <td>@Html.TextBoxFor(x => x.Ime, new { @class = "form-control" })</td>
          
        </tr>
        <tr>
            <td>Prezime</td>
            <td>@Html.TextBoxFor(x => x.Prezime, new { @class = "form-control" })</td>
            
        </tr>
        <tr>
            <td>Ime oca</td>
            <td>@Html.TextBoxFor(x => x.ImeOca, new { @class = "form-control" })</td>
           
        </tr>
        <tr>
            <td>Kontakt telefon</td>
            <td>@Html.TextBoxFor(x => x.KontaktTelefon, new { @class = "form-control" })</td>
           
        </tr>
        <tr>
            <td>Matični broj</td>
            <td>@Html.TextBoxFor(x => x.MaticniBroj, new { @class = "form-control" })</td>
          
        </tr>
        <tr>
            <td>Spol</td>
            <td>@Html.DropDownList("Spol", Html.GetEnumSelectList<Gender>(), "Odaberite spol", new { @class = "form-control" })</td>
           
        </tr>
        <tr>
            <td>Datum rodenja</td>
            <td><input asp-for="DatumRodenja" class="form-control" /></td>
         
        </tr>

        <tr>
            <td>Godina studija</td>
            <td>@Html.DropDownListFor(x => x.GodinaStudijaID, Model.GodineStudija, new { @class = "form-control" })</td>
          
        </tr>
        <tr>
            <td>Fakultet</td>
            <td>@Html.DropDownListFor(x => x.FakultetID, Model.Fakulteti, new { @class = "form-control" })</td>
          
        </tr>
        <tr>
            <td>Grad</td>
            <td>@Html.DropDownListFor(x => x.GradID, Model.Gradovi, new { @class = "form-control" })</td>
           
        </tr>
        <tr>
            
            <td>@Html.HiddenFor(x => x.IsAktivan)</td>
            
        </tr>
        <tr><td><input type="submit" value="Snimi" class="btn btn-success" /></td></tr>
    </table>

</form>